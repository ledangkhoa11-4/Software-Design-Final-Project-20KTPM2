
<link rel="stylesheet" 
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="/public/css/shared-recipe.css">
<link rel="stylesheet" href="/public/css/pagination.css">



{{#if this.isEmpty}}
   {{else}}
      <div class="col-9 ">
         <div class="card">
            <div class="card-header">
               <h1 style="margin-left: 1rem;">My Shared Recipes</h1>
            </div>
            <div class="card-body d-flex flex-wrap">
                  {{#each this.list}}            
                     <div class="card sharedrecipe" >
                        <div class="card-body ">
                           <a class="recipeName" href="/recipes/{{id}}">
                           <h5 class="card-title ">{{Name}}</h5>
                           <img class="card-img-top " width="100px" height="150px" src="/public/images/recipes/{{id}}/{{id}}_finishImage_1.jpg" alt="...">
                           </a>
                           <div>
                                 {{{description}}} 
                           </div>
                           
                           <div>
                              <a>
                              <i class="fa-regular fa-clock"></i>
                              Cooking Time: {{cookingTime}}
                           </a>
                           </div>
                           <div>
                           <a>
                              <i class="fa-regular fa-thumbs-up" style="color: #5161ce;"></i>
                              0
                           </a>
                           </div>
                        </div>
                     </div>
                   {{/each}}
                   
                   
            </div>
            <div class="card-footer">
                     <div class="page-container">
                        <a class="first-page">
                        <i class="fas fa-angle-double-left"></i>
                        </a>
                        <a class="prev-page">
                        <i class="fas fa-angle-left"></i>
                        </a>
                        <div id="pagination"></div>
                        <a class="next-page">
                        <i class="fas fa-angle-right"></i>
                        </a>
                        <a class="last-page">
                        <i class="fas fa-angle-double-right"></i>
                        </a>
                  </div>
            </div>
         </div> 
      </div>
      {{/if}}
<script src="/public/script/pagination.js">

</script>
<script>
  {{#if nPage}}
   const valuePage = {
    totalPages: {{this.nPage}},
    curPage: {{this.page}},
    truncate: true,
        numLinksTwoSide: 1,
        url: `{{url}}`
    };
    pagination(valuePage);
  {{/if}}
    
</script>

