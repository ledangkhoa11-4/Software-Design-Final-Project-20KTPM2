<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

<div class="container">
    
    <div class="row mt-5">
        <div class="col-4">
            {{#each finishImgs}}
            <img style="width: 100%;height: 120px; margin: 4px 0; border-radius:16px;" src="data:image/png;base64,{{this}}" alt="Red dot" />
            {{/each}}
        </div>
        <div class="col-8">
            <h2>{{recipe.Name}}</h2>
            <div class=" mt-4">
                <p style="font-weight: bold;">Write by: {{user.fullname}}</p>
                <p style="font-weight: bold;">@ {{user.email}}</p>
                <div class="description">{{{recipe.description}}}</div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <h3 style="margin-left: 16px; font-weight: bold">Ingredients:</h3>
        <ul class="list-group list-group-flush mt-2">
            {{#each ingredients}}
                <li class="list-group-item" style="display: flex;justify-content: space-between;">
                    <span class="ingredient-name" style="font-weight: bold;">{{this.name}}</span>
                    <span class="ingredient-calories">{{this.calories}} calories</span>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="row mt-5">
        <h3 style="margin-left: 16px; font-weight: bold">Step by step:</h3>
        {{#each steps}}
            <div class="step-wrapper mb-5">
                <p class="step-header" style="font-weight: bold; font-style: italic; text-decoration: underline;">Step {{this.id}}:</p>
                <p style="text-indent:16px">{{this.stepName}}</p>
                <div class="row">
                    {{#each imgs}}
                        <div class="col-auto mt-2 mb-2 mr-3">
                            <img style="max-width:250px;height: 120px; border-radius:16px;"  src="data:image/png;base64,{{this}}" alt="Red dot" />
                        </div>
                    {{/each}}
                </div>
            </div> 
        {{/each}}
    </div>
</div>