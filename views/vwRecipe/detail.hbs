<div class="container-sm mt-5" style="margin-bottom: 100px;">
    <div class="row">
        <div class="col-9">
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    {{#each finishImgs}}
                    <div class="swiper-slide">
                        <a href="{{this}}" data-fancybox="finished" data-caption="Finished dish photo">
