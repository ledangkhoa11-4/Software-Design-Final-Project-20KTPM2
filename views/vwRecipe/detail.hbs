<script>
    let isLoved = {{ isLiked }}
    let isLogged = {{ isLogged }}
    $(function () {
        $(".heart").on("click", function () {
            if (isLogged)
                $(this).toggleClass("is-active");
        });
    });
    function addToFavorite() {
        if (isLogged == false) {
            return addError("Please login before like!!!")
        }
        $.post("/recipes/like/{{recipe.id}}",
            {
                type: !isLoved
            },
            function (data, status) {
                if (data.status == "failure") {
                    addError(data.msg)
                } else {
                    addSuccess(data.msg)
                }
            });
        isLoved = !isLoved
    }
</script>
<script>
    let isSaved = {{ isSaved }}
    $(function () {
        $(".fav-act").on("click", function () {
            if (isLogged && isSaved)
                $(this).css({ 'color': '#FF9933' });
            else if (isLogged && !isSaved)
                $(this).removeAttr("style");
        });
    });
    function saveRecipe() {
        if (isLogged == false) {
            return addError("Please login before save!!!")
        }
        $.post("/recipes/save/{{recipe.id}}",
            {
                type: !isSaved
            },
            function (data, status) {
                if (data.status == "failure") {
                    addError(data.msg)
                } else {
                    addSuccess(data.msg)
                }
            });
        isSaved = !isSaved
    }
</script>

