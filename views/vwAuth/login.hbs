    <div class="spacer"></div>
    <div class="form__group ">
        <label for="email">Email</label>
        <input type="email" name="email" class="email" placeholder="Eg. email@domain.com">
        <i class="fa-solid fa-triangle-exclamation error-icon"></i>
        <span class="form__group-message email-message"></span>
    </div>
    <div class="form__group ">
        <label for="password">Password</label>
        <input type="password" name="password" class="password" autocomplete="true">
        <i class="fa-solid fa-triangle-exclamation error-icon"></i>
        <span class="form__group-message password-message"></span>
    </div>

    <p>Not a member? <a href="/auth/register">Register now </a> <i class="bi bi-arrow-right"></i></p>
    <input type="submit" value="Login">
    <hr class="my-4">
    <a href="/auth/google" class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39; width:502px;border-color:#dd4b39">
        <i class="fab fa-google me-2"></i>Sign in with google
    </a>
    <a href="">{{alertTitle.msg}}</a>
</form>
<script src="/public/script/validate.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    Validator(
        {
            form: ".form-1",
            error_message: ".form__group-message",
            rules: [
                Validator.isRequire(".email"),
                Validator.isRequire(".password"),

                Validator.isEmail(".email"),
                Validator.minLength(".password", 8),
            ],
            onSubmit: function (data) {
                 document.querySelector(".form-1").submit();
            }
        })

</script>
{{#if alertTitle.isAlert}}
<script>
    Swal.fire({
    width: 600,
  icon: 'error',
  title: '{{alertTitle.msg}}',
  showConfirmButton: false,
  timer: 2500
}).then(result=>{
    window.location.href = "/auth/login"
})
    </script>
{{/if}}